<%= render 'shared/navbar' %>

<div class="m-10 p-10">
<h1 class="text-4xl font-extrabold text-center text-gray-800 mb-8">Director Details: <%= @director.name %></h1>

<!-- Director Info Section -->
<div class="bg-gradient-to-r from-green-500 to-blue-500 p-6 rounded-lg shadow-lg mb-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Director Information</h2>
    <div class="space-y-4">
      
      <p class="text-lg font-medium"><strong>Number of Movies Directed:</strong> <%= @movies.count %></p>
       <p class="text-lg font-medium"><strong> Birth:</strong> <%= @director.birth_year %></p>
        <p class="text-lg font-medium"><strong>Nationality:</strong> <%= @director.nationality %></p>
    </div>
  </div>
</div>

<!-- Movies Directed Section -->
<h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">Movies Directed</h2>

<!-- Movie List Table -->
<div class="overflow-x-auto bg-white shadow-lg rounded-lg p-6 mb-8">
  <table class="table-auto w-full border-collapse text-sm">
    <thead class="bg-gradient-to-r from-green-400 to-blue-500 text-white">
      <tr>
        <th class="border p-4 text-left font-semibold">Title</th>
        <th class="border p-4 text-left font-semibold">Genre</th>
        <th class="border p-4 text-left font-semibold">Release Date</th>
      </tr>
    </thead>
    <tbody class="bg-white text-gray-800">
      <% @movies.each do |movie| %>
        <tr class="hover:bg-green-50 transition duration-200">
          <td class="border p-4">
            <%= link_to movie.title, movie_path(movie), class: "text-indigo-600 hover:underline font-medium" %>
          </td>
          <td class="border p-4"><%= movie.genre %></td>
          <td class="border p-4"><%= movie.release_date.strftime('%B %d, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Back Link -->
<div class="mt-6 text-center">
  <%= link_to 'Back to Directors List', directors_path, class: "text-blue-500 hover:underline font-semibold" %>
</div>
</div>
