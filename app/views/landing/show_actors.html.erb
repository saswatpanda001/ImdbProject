<%= render 'shared/navbar' %>

<div class="m-10 p-10">
<h1 class="text-4xl font-extrabold text-center text-gray-800 mb-8">Actor Details: <%= @actor.name %></h1>

<!-- Actor Info Section -->
<div class="bg-gradient-to-r from-teal-500 to-indigo-500 p-6 rounded-lg shadow-lg mb-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Actor Information</h2>
    <div class="space-y-4">
      <p class="text-lg font-medium"><strong>Birth Year:</strong> <%= @actor.birth_year %></p>
      <p class="text-lg font-medium"><strong>Nationality:</strong> <%= @actor.nationality %></p>
      <p class="text-lg font-medium"><strong>Created At:</strong> <%= @actor.created_at.strftime('%B %d, %Y') %></p>
      <p class="text-lg font-medium"><strong>Updated At:</strong> <%= @actor.updated_at.strftime('%B %d, %Y') %></p>
    </div>
  </div>
</div>

<!-- Location Map Section -->
<% if @actor.longitude.present? && @actor.latitude.present? %>
  <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Location on Map</h2>
    <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
      <iframe
        width="100%"
        height="300"
        style="border:0"
        loading="lazy"
        allowfullscreen
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps?q=<%= @actor.latitude %>,<%= @actor.longitude %>&output=embed">
      </iframe>
    </div>
  </div>
<% end %>

<!-- Movies Section -->
<h2 class="text-3xl font-bold text-center text-gray-700 mb-6">Movies</h2>

<!-- Movie List Table -->
<div class="overflow-x-auto bg-white shadow-lg rounded-lg mb-8 p-4">
  <table class="table-auto w-full border-collapse mt-6 text-sm">
    <thead class="bg-gradient-to-r from-teal-400 to-indigo-500 text-white">
      <tr>
        <th class="border p-4 text-left font-semibold">Title</th>
        <th class="border p-4 text-left font-semibold">Genre</th>
        <th class="border p-4 text-left font-semibold">Rating</th>
        <th class="border p-4 text-left font-semibold">Release Date</th>
      </tr>
    </thead>
    <tbody class="bg-white text-gray-800">
      <% @movies.each do |movie| %>
        <tr class="hover:bg-teal-50 transition duration-200">
          <td class="border p-4">
            <%= link_to movie.title, movie_path(movie), class: "text-indigo-600 hover:underline font-medium" %>
          </td>
          <td class="border p-4"><%= movie.genre %></td>
          <td class="border p-4"><%= movie.rating %></td>
          <td class="border p-4"><%= movie.release_date.strftime('%B %d, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Back Link -->
<div class="mt-6 text-center">
  <%= link_to 'Back to Actors List', actors_path, class: "text-blue-500 hover:underline font-semibold" %>
</div>
</div>
