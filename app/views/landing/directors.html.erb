<%= render 'shared/navbar' %>
<div class="m-10 p-10">
<h1 class="text-4xl font-extrabold text-center text-gray-800 mb-6">Directors</h1>

<!-- Directors Table -->
<div class="overflow-x-auto bg-white shadow-xl rounded-lg">
  <table class="table-auto w-full border-collapse mt-6 text-sm">
    <thead class="bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500 text-white">
      <tr>
        <th class="border p-4 text-left font-semibold">Name</th>
        <th class="border p-4 text-left font-semibold">Number of Movies</th>
        <th class="border p-4 text-left font-semibold">Birth Year</th>
        <th class="border p-4 text-left font-semibold">Nationality</th>
      </tr>
    </thead>
    <tbody class="bg-white text-gray-800">
      <% @directors.each do |director| %>
        <tr class="hover:bg-gray-50 transition duration-200">
          <td class="border p-4">
            <%= link_to director.name, show_director_path(director), class: "text-indigo-600 hover:underline font-medium" %> 
          </td>
          <td class="border p-4">
            <%= director.movies.count %> 
          </td>
          <td class="border p-4"><%= director.birth_year %></td>
          <td class="border p-4">
            <%= director.nationality %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Pagination Controls -->
<div class="mt-8 flex justify-center space-x-4">
  <% if @directors.prev_page %>
    <%= link_to "← Previous", directors_path(page: @directors.prev_page, search: params[:search]), class: "bg-gray-300 text-gray-800 py-2 px-6 rounded-lg hover:bg-gray-400 transition" %>
  <% end %>

  <span class="text-gray-700 font-semibold"> Page <%= @directors.current_page %> of <%= @directors.total_pages %> </span>

  <% if @directors.next_page %>
    <%= link_to "Next →", directors_path(page: @directors.next_page, search: params[:search]), class: "bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition" %>
  <% end %>
</div>

</div>
